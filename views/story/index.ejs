<% layout('main') -%>
<link rel="stylesheet" href="css/app.css">
<link rel="stylesheet" href="css/custom.css">
<div class="container m-t-20">

  <div class="row">
    <% for(var i = 0; i < stories.length; i++){ %>
    <div class="col-md-4">
      <a href="/story/<%= stories[i]._id %>">
        <div class="thumbnail">
          <img src="<%= stories[i].image %>" alt="">
          <div class="caption">
            <h3 class="title"><%= stories[i].headline %></h3>
            <p><%= stories[i].category.name %></p>
            <p><%= stories[i].body %></p>
          </div>
        </div>
      </a>
    </div>
    <% } %>
  </div>

</div>
