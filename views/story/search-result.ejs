<% layout('app') -%>

<% if(data.length === 0){ %>
  <h3>Search not found</h3>
<% } else { %>
  <h3>Results for <%= query %></h3>
<% } %>

<div class="container m-t-20">
  <div class="row">
    <% for(var i = 0; i < data.length; i++) { %>
      <div class="col-md-4">
        <a href="/story/<%= data[i]._id %>">
          <div class="thumbnail">
            <img src="<%= data[i]._source.image %>" alt="">
            <div class="caption">
              <h3 class="title"><%= data[i]._source.headline %></h3>
              <p><%= data[i]._source.category.name %></p>
              <p><%= data[i]._source.body %></p>
            </div>
          </div>
        </a>
      </div>
    <% } %>
  </div>
</div>
